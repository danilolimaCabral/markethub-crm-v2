# ==================================
# MARKETHUB CRM - Environment Variables
# ==================================

# ----- APLICAÇÃO -----
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# ----- BANCO DE DADOS -----
# Opção 1: URL completa (recomendado para produção)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/markethub_crm

# Opção 2: Variáveis individuais (para desenvolvimento)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=markethub_crm
DB_USER=postgres
DB_PASSWORD=postgres

# ----- AUTENTICAÇÃO JWT -----
# IMPORTANTE: Mudar em produção! Use senhas fortes e únicas
JWT_SECRET=seu-secret-key-super-secreto-mude-em-producao
JWT_REFRESH_SECRET=seu-refresh-secret-key-super-secreto
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----- SUPER ADMIN -----
# Credenciais do super administrador (mudar em produção!)
SUPER_ADMIN_USER=superadmin
SUPER_ADMIN_PASS=SuperAdmin@2024!

# ----- MERCADO LIVRE API -----
ML_CLIENT_ID=seu_client_id_aqui
ML_CLIENT_SECRET=seu_client_secret_aqui
ML_REDIRECT_URI=http://localhost:3000/api/integrations/mercadolivre/callback
ML_APP_URL=https://auth.mercadolivre.com.br/authorization

# ----- AMAZON SP-API -----
AMAZON_CLIENT_ID=seu_client_id
AMAZON_CLIENT_SECRET=seu_client_secret
AMAZON_REFRESH_TOKEN=seu_refresh_token
AMAZON_AWS_ACCESS_KEY=sua_access_key
AMAZON_AWS_SECRET_KEY=sua_secret_key
AMAZON_REGION=us-east-1
AMAZON_MARKETPLACE_ID=A2Q3Y263D00KWC
AMAZON_SELLER_ID=seu_seller_id

# ----- SHOPEE API -----
SHOPEE_PARTNER_ID=seu_partner_id
SHOPEE_PARTNER_KEY=seu_partner_key
SHOPEE_SHOP_ID=seu_shop_id
SHOPEE_ACCESS_TOKEN=seu_access_token
SHOPEE_API_URL=https://partner.shopeemobile.com

# ----- GOOGLE GEMINI AI -----
GOOGLE_GEMINI_API_KEY=sua_api_key_google_gemini

# ----- STRIPE (Pagamentos) -----
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ----- ASAAS (Pagamentos Brasil) -----
ASAAS_API_KEY=sua_api_key_asaas
ASAAS_ENVIRONMENT=sandbox
ASAAS_WEBHOOK_URL=https://seudominio.com/api/webhooks/asaas

# ----- REDIS (Cache - Opcional) -----
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ----- EMAIL (Recuperação de senha, notificações) -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
EMAIL_FROM=noreply@markethubcrm.com.br

# ----- STORAGE (AWS S3 ou similar) -----
AWS_S3_BUCKET=markethub-uploads
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY=sua_access_key
AWS_S3_SECRET_KEY=sua_secret_key

# ----- LOGS E MONITORAMENTO -----
# Sentry para tracking de erros (opcional)
SENTRY_DSN=https://...@sentry.io/...

# LogRocket para session replay (opcional)
LOGROCKET_APP_ID=seu-app-id

# ----- WEBHOOKS -----
WEBHOOK_SECRET=seu-webhook-secret-para-validacao

# ----- RATE LIMITING -----
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----- FEATURE FLAGS -----
ENABLE_2FA=true
ENABLE_MARKETPLACE_INTEGRATIONS=true
ENABLE_AI_ASSISTANT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_WEBHOOKS=true

# ----- DEBUG -----
DEBUG=false
LOG_LEVEL=info
